{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "noErrorTruncation": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "./src/types"]
  },
  "exclude": ["node_modules", "dist"]
}
